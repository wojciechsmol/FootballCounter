<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E61B5E20</item>
        <item name="colorPrimaryDark">#E61B5E20</item>
        <item name="colorAccent">#E61B5E20</item>
        <item name="colorButtonNormal">#E61B5E20</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#73212121</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/team_name</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Landscape">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>

    </style>

    <style name="LayoutScoreCards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#73212121</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutScoreCards.Landscape">
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutCard.Landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LayoutCardNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="NumberText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/zero</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NumberText.Landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <style name="CardIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="CardIcon.Landscape">
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_height">42dp</item>
    </style>


    <style name="ButtonPlus">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
